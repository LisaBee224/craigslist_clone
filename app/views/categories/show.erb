<div class="container">

<h1>articles for <%=@category.name %></h1>
  <% @articles.each do |article|%>
    <ul>
  <li><%=article.title %></li>
  <li><%=article.body %></li>
    </ul>
  <%end%>

  <h1>Post a new article</h1>

    <% if @article.errors.any? %>
  <div id = "error">
    <h2>
      <%=pluralize(@article.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%=msg %></li>
      <%end%>
    </ul>
  </div>
  <%end%>
  <%=form_for [@category, @article] do |f| %>


  <p><%=f.label :title %><br>
    <%=f.text_field :title %>
  </p>
  <p><%=f.label :body %><br>
    <%= f.text_area :body %>
  </p>


  <p><%=f.submit %>
  </p>
  <%end%>


<%=link_to 'back', categories_path %>
</div>


